sudo apt-get install debhelper g++ libjs-coffeescript libfreetype6-dev libjpeg-dev libpng-dev libsqlite3-dev libssl-dev libz-dev libfontconfig1-dev libx11-dev libxext-dev libqt5webkit5-dev python qt5-qmake qtchooser

git clone https://github.com/ariya/phantomjs.git

wget https://github.com/Mint-Fans/linux-package/raw/debian/phantomjs-2.5-patch.diff
patch -p0 -i phantomjs-2.5-patch.diff

export QT_SELECT=qt5

python build.py --skip-git --skip-qtbase --skip-qtwebkit --confirm --release

make install DESTDIR=

